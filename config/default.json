{
  "port": "env(PORT)",
  "settings": {
    "bodyParser": {
      "limit": "50mb"
    },
    "loggerFormat": "tiny",
    "session": {
      "store": "@foal/typeorm",
      "csrf": {
        "enabled": true
      }
    },
    "jwt": {
      "secret": "env(JWT_SECRET)",
      "secretEncoding": "base64",
      "cookie": {

      }
    },
    "social": {
      "google": {
        "clientId": "env(GOOGLE_CLIENT_ID)",
        "clientSecret": "env(GOOGLE_CLIENT_SECRET)",
        "redirectUri": "http://localhost:3000/api/auth-social/signin/google/callback"
      }
    }
  },
  "database": {
    "type": "mysql",
    "host": "localhost",
    "port": 3306,
    "username": "root",
    "password": "",
    "database": "app-yitodev"
  }
}
